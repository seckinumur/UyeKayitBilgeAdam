@model List<UyeKayitBilgeAdam.DAL.VM.VMUyeTipi>
@{
    ViewBag.Title = "UyeTipi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Tipi</h2>

<div id="page-wrapper">
    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">Ana Sayfa <button class="btn btn-success" data-toggle="modal" data-target="#Comar"><i class="fa fa-paperclip"></i> AtaçAdam Yardım</button> </h1>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tüm ÜyeTipleri Gösteriliyor
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ÜYE TİPİ</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Tipi</td>
                                        <td>
                                            <button data-toggle="modal" data-target="#myModal" class="btn btn-warning" onclick="Islem(@item.UyeTipiID)">Üye Tipi Sil</button>
                                            <input type="hidden" id="@item.UyeTipiID" value="@item.Tipi" />
                                            <button data-toggle="modal" data-target="#Duzenle" class="btn btn-info" onclick="Islem2(@item.UyeTipiID)">Üye Tipi Düzenle</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal fade" id="Comar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">AtaçAdam AI V.1.2 (ALPHA)</h4>
                    </div>
                    <div class="modal-body">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                AtaçAdam Yardım
                            </div>
                            <div class="panel-body">
                                <p>
                                    Merhaba! Ben SiteRobotu AtaçAdam. BilgeAdam Basit ÜyeTipleri Kayıt Sistemine hoşgeldiniz.
                                    <strong style="color:red">
                                        Bu Program Bilge Adam Ödevi İçin Hazırlanmıştır. Basit Şekilde ÜyeTipleri Kaydetme Düzenleme
                                        Silme İşlemlerini Gerçekleştirir.
                                    </strong>Bu Sayfada Tüm ÜyeTipleri Gösterilmektedir
                                </p>
                            </div>
                            <div class="panel-footer">
                                Haydi Hazırsanız Şimdi ÜyeTipleri Bir Göz Atın...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">ÜyeTipi Silme</h4>
                    </div>
                    <form role="form" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="UyeTipiID" id="SilmeAl" />
                            <input type="hidden" name="Gorev" value="Sil" />
                            <div class="form-group">
                                <label>Bu ÜyeTipi Silenecek Devam Edilsin mi?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-warning">SİL</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="Duzenle" tabindex="-1" role="dialog" aria-labelledby="DuzenleLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="DuzenleLabel">ÜyeTipi Düzenle</h4>
                    </div>
                    <form role="form" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="UyeTipiID" id="idal" />
                            <input type="hidden" name="Gorev" value="Degistir" />
                            <div class="form-group">
                                <label>Bu ÜyeTipi Güncellenecek Devam Edilsin mi?</label>
                                <div class="form-group">
                                    <label>Uye Tipi</label>
                                    <input class="form-control" name="Tipi" id="BuarayaYaz">
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        ÇOMAR AI V.1.2 (ALPHA)
                                    </div>
                                    <div class="panel-body">
                                        <p>
                                            Merhaba! Ben SiteRobotu AtaçAdam. Şimdi Seçtiğiniz ÜyeTipi ismini Görüyor Olmalısınız.
                                            Buradan <strong style="color:blue"> ÜyeTipi Düzenleyebilirsiniz </strong>
                                        </p>
                                    </div>
                                    <div class="panel-footer">
                                        Hazırsanız Şimdi ÜyeTipi Güncelleyelim...
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="Ekle" tabindex="-1" role="dialog" aria-labelledby="EkleLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="EkleLabel">ÜyeTipi Ekle</h4>
                    </div>
                    <form role="form" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="Gorev" value="Ekle" />
                            <div class="form-group">
                                <label>Yeni Bir ÜyeTipi Eklenecek Devam Edilsin mi?</label>
                                <div class="form-group">
                                    <label>Uye Tipi</label>
                                    <input class="form-control" name="Tipi">
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        AtaçAdam AI V.1.2 (ALPHA)
                                    </div>
                                    <div class="panel-body">
                                        <p>
                                            Merhaba! Ben SiteRobotu AtaçAdam. Bu Menüden Yeni Bir ÜyeTipi Ekleyebilirsiniz.
                                        </p>
                                    </div>
                                    <div class="panel-footer">
                                        Hazırsanız Şimdi Yeni Bir ÜyeTipi Ekleyelim...
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-warning">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div>
                <button data-toggle="modal" data-target="#Ekle" class="btn btn-info col-lg-12">ÜyeTipi Ekle</button>
                <p class="text-warning"><strong>Bir ÜyeTipi Eklemek İçin ÜyeTipi Ekle Butonuna Basın</strong></p>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Islem(al) {
        document.getElementById("SilmeAl").value = al;
    }
    function Islem2(al2) {
        var a = document.getElementById(al2).value;
        document.getElementById("idal").value = al2;
        document.getElementById("BuarayaYaz").value = a;
    }
</script>

